## auth_db_path:  path to auth db file "principals.db" inside vger image
auth_db_path: /vger_home/crossbar/principals.db
## authid:  optional for cryptosign auth (looked up in auth db from pk)
# authid: vger
## cb_host:  host on which crossbar runs
cb_host: localhost
## cb_port:  port on which crossbar listens
cb_port: 8080
## console:  output log messages to console (default: false)
# console: false
## db_url:  url for the postgresql database "vgerdb"
db_url: postgresql://scred@localhost:65432/vgerdb
## debug:  set log level to "DEBUG" (default: false)
# debug: true
## discipline_subsystems:  mapping of disciplines (roles) to subsystem types
discipline_subsystems:
  mechanical: mechanical_system
  power: power_system
## ldap_required_fields:  (optional) fields required locally for LDAP searches
# ldap_required_fields:  (identityStatus=Active)(objectClass=person)
## ldap_schema:  (optional) mapping of LDAP attributes to Person attributes
# ldap_schema:
  # [user id]: id
  # [unique identifier]: oid
  # [first name]: first_name
  # [initials]: mi_or_name
  # [employer name]: employer_name
  # [email address]: email
  # [organizational code]: org_code
  # [last name]: last_name
## ldap_url:  (optional) url of the local LDAP database, if one is available
# ldap_url:  ldap://ldap.example.com
## test:  if true, test project (H2G2) is loaded at startup (default: false)
# test: true
