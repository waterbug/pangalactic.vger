{
   "version": 2,
   "workers": [
      {
         "type": "router",
         "options": {
            "pythonpath": [".."]
         },
         "realms": [
            {
               "name": "pangalactic-services",
               "roles": [
                  {
                     "name": "authenticator",
                     "permissions": [
                        {
                           "uri": "pangalactic.authenticate",
                           "allow": {
                              "call": true,
                              "register": true,
                              "publish": true,
                              "subscribe": true
                           }
                        }
                     ]
                  },
                  {
                     "name": "user",
                     "permissions": [
                        {
                           "uri": "",
                           "match": "prefix",
                           "allow": {
                              "call": true,
                              "register": true,
                              "publish": true,
                              "subscribe": true
                           },
                           "disclose": {
                              "caller": true,
                              "publisher": true
                           },
                           "cache": true
                        }
                     ]
                  },
                  {
                     "name": "service",
                     "permissions": [
                        {
                           "uri": "",
                           "match": "prefix",
                           "allow": {
                              "call": true,
                              "register": true,
                              "publish": true,
                              "subscribe": true
                           },
                           "disclose": {
                              "caller": true,
                              "publisher": true
                           },
                           "cache": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "websocket",
               "endpoint": {
                  "type": "tcp",
                  "port": 8080,
                  "tls": {
                      "key": "server_key.pem",
                      "certificate": "server_cert.pem"
                      }
               },
               "auth": {
                  "cryptosign": {
                     "type": "dynamic",
                     "authenticator": "pangalactic.authenticate",
                     "authenticator-realm": "pangalactic-services"
                  }
               }
            }
         ],
         "components": [
            {
               "type": "class",
               "classname": "authenticator.AuthenticatorSession",
               "realm": "pangalactic-services",
               "role": "authenticator"
            }
         ]
      }
   ]
}
